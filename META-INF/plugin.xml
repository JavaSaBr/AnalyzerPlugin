<idea-plugin version="2">
    <id>com.instinctools.analyzer</id>
    <name>Security Analyzer</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.instinctools.com">Instinctools</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.instonctools.analyzer.service.RuleService"
                            serviceImplementation="com.instonctools.analyzer.service.impl.RuleServiceImpl"/>
        <applicationService serviceInterface="com.instonctools.analyzer.service.StandardService"
                            serviceImplementation="com.instonctools.analyzer.service.impl.StandardServiceImpl"/>
        <applicationService serviceInterface="com.instonctools.analyzer.service.MarkerService"
                            serviceImplementation="com.instonctools.analyzer.service.impl.MarkerServiceImpl"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.instonctools.analyzer.ui.SecurityLineMarkerProvider"/>
        <toolWindow id="Project Markers" anchor="bottom"
                    factoryClass="com.instonctools.analyzer.ui.panel.ProjectMarkerPanelFactory"/>
        <annotator language="JAVA" implementationClass="com.instonctools.analyzer.ui.SecurityLineMarkerAnnotator"/>
    </extensions>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>com.instonctools.analyzer.component.AnalyzerApplicationComponent
            </implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.instonctools.analyzer.component.AnalyzerProjectComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="com.instinctools.analyzer.Review" class="com.instonctools.analyzer.ui.actions.StartAnalyzeAction"
                text="Analyze security problems"
                description="Start analyzing security problems">
            <add-to-group group-id="AnalyzeMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>